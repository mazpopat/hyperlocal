<div id="map_canvas" style="width:100%; height: 500px"></div>

<div id="first-page" style="">
<!-- TOP NAVBAR WITH BUTTON FOR SLIDING PANEL-->
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <a class="navbar-brand"  href="#" style="float: right" >
        <button id="arrow-button" type="submit" class="btn btn-default" name="">
          <span id="right-panel-link" href= "#right-panel"  class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </button>
      </a>
    </div>
  </nav>

  <!---BEGINNING OF RIGHT SLIDING PANEL FOR LOGIN/REGISTER-->
  <div id="right-panel" class="panel">
    <button id="register-button">
      <a><em><span id="register" href="#">New user? Register</span></em></a>
    </button>

    <form id="right-panel-login" >
      <div class="form-group">
        <label>USERNAME</label>
        <input type="text" class="form-control" id="username" placeholder="Username" value="">
      </div>
      <div class="form-group">
        <label>PASSWORD</label>
        <input type="password" class="form-control" id="password" placeholder="Password" value="">
      </div>
      <button type="submit" id="login-button" class="ghost side-button">
      LOGIN</button>   
    </form>

    <form id="right-panel-register">
      <div class="form-group">
        <label>USERNAME</label>
        <input type="text" class="form-control" id="username" placeholder="Username" value="">
      </div>
      <div class="form-group">
        <label>EMAIL</label>
        <input type="email" class="form-control" id="email" placeholder="Email" value="">
      </div>
      <div class="form-group">
        <label>PASSWORD</label>
        <input type="password" class="form-control" id="password" placeholder="Password" value="">
      </div>
      <button type="submit" id="sign-up" class="ghost side-button">SIGN UP</button>   
    </form>
  </div><!--END OF THE RIGHT SLIDING PANEL-->

  <!--LANDING PAGE -->
  <div id="landing" class="container">
    <div class="row">
      <span id="app-name">HYPERLOCAL</span>
    </div><!-- END OF DIV WITH APP NAME-->
    <div class="row">
      <div class="col-md-4"> </div>
      <div class="col-md-4" style="text-align: center">
        <a class="ghost" id="enter" href="#">Try as a Guest</a>
      </div>
      <div class="col-md-4"> </div>
    </div><!-- END OF ROW WITH ENTER BUTTON-->
  </div><!-- END OF THE LANDING CONTAINER-->
</div> <!--END OF THE FIRST PAGE-->


<!-- SECOND VIEW AFTER LOGIN -->
<div id="second-page" >
  <!--TOP NAVBAR WITH BUTTONS TO UPLOAD PICTURES AND LOG OUT-->
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul id="upload-signout-navbar" class="nav navbar-nav navbar-right">
          <li id="upload-panel-button"><a href="#"  class="pull-me">Upload pictures</a></li>
          <li><a href="#">Sign out</a></li>
        </ul> <!-- END OF NAVBAR RIGHT -->
      </div> <!-- end of navbar collapse-->
    </div> 
  </nav><!--END OF NAVBAR-->

<!-- UPPER PANEL FOR PICTURE UPLOADING -->
  <div class="upload-panel" style="">
    <div id="file-input" class="fileinput fileinput-new input-group" data-provides="fileinput" style="">
      <div class="form-control" data-trigger="fileinput">
        <i class="glyphicon glyphicon-file fileinput-exists"></i> 
        <span class="fileinput-filename"></span>
      </div>
      <span class="input-group-addon btn btn-default btn-file">
        <span class="fileinput-new">Select file</span>
        <span class="fileinput-exists">Change</span>
        <input type="file" name="filename" />
      </span>
      <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
    </div><!-- END OF INPUT FILE DIV-->
    <div  id="process-upload">
       <!--<button type="submit" class="ghost upload-button" style="background-color: #fff; color: black; float: right">UPLOAD</button>-->
      <button type="button" class="btn btn-default" id="cancel-upload" style="">CANCEL</button>
      <button type="button" class="btn btn-default" id="upload-picture" style="">UPLOAD</button>
    </div><!-- END OF DIV WITH UPLOAD/CANCEL BUTTONS-->  
  </div><!-- END OF UPLOADING PANEL--> 


  <!--DISPLAY 5 PICTURES SELECTED BY THE USER -->
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="#">
          <img src="http://placehold.it/800x600" class="placeholder thumbnail img-responsive" >
        </a>
      </div>
      <div class="col-md-3">
        <a href="#">
          <img src="http://placehold.it/800x600" class="placeholder thumbnail img-responsive">
        </a>
      </div>
      <div class="col-md-3">
        <a href="#">
          <img src="http://placehold.it/800x600" class="placeholder thumbnail img-responsive">
        </a>
      </div>
      <div class="col-md-3">
        <a href="#">
          <img src="http://placehold.it/800x600" class="placeholder thumbnail img-responsive">
        </a>
      </div>
    </div>
  </div><!--END OF THE USER'S PICTURE CONTAINER-->

  <!-- MAP-->

      

  <div class="container">
    <div class="row">
      <%= @html %>
    </div>
  </div>
  <!--coming from the backend-->

  <!-- INSTRAGRAM PICTURES PLACEHOLDER-->



</div><!--END OF SECOND PAGE-->






